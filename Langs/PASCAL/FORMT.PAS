uses DOS,CRT;
var FormatoDeData       : word;
    SimboloDeMoeda      : string[5];
    SeparadorMilhares   : string[2];
    SeparadorDecimal    : string[2];
    SeparadorData       : string[2];
    SeparadorHora       : string[2];
    LocalMoeda          : byte;
    NumeroDecimaisMoeda : byte;
    FormatoDeHora       : byte;
    SeparadorDeLista    : string[2];
    Atual               : string[34];
    Novo                : string[34];
    regs                : registers;
    i                   : integer;
    aux                 : string;
begin
   atual:='';
   for i:=1 to 34 do atual:=atual+#32;
   for i:=1 to 34 do atual[i]:=#0;
   regs.ah:=$38;
   regs.ds:=seg(Atual);
   regs.bx:=0;
   regs.dx:=ofs(atual)+1;
   regs.al:=0;
   intr($21,regs);
   novo:=atual;
   writeln('Entre com o formato da data:');
   writeln;
   writeln(' 0 - MM/DD/AA');
   writeln(' 1 - DD/MM/AA');
   writeln(' 2 - AA/MM/DD');
   writeln;
   readln(FormatoDeData);
   aux:=chr(lo(FormatoDeData));
   novo[1]:=aux[1];
   aux:=chr(hi(FormatoDeData));
   novo[2]:=aux[1];
   writeln;
   write('Entre com o simbolo de moeda corrente: ');
   readln(SimboloDeMoeda);
   repeat
      SimboloDeMoeda:=SimboloDeMoeda+#0;
   until length(SimboloDeMoeda)=5;
   for i:=1 to 5 do novo[2+i]:=SimboloDeMoeda[i];
   write('Entre com o separador de milhares: ');
   readln(SeparadorMilhares);
   repeat
      SeparadorMilhares:=SeparadorMilhares+#0;
   until length(SeparadorMilhares)=2;
   for i:=1 to 2 do novo[7+i]:=SeparadorMilhares[i];
   write('Entre com o separador decimal: ');
   readln(SeparadorDecimal);
   repeat
      SeparadorDecimal:=SeparadorDecimal+#0;
   until length(SeparadorDecimal)=2;
   for i:=1 to 2 do novo[9+i]:=SeparadorDecimal[i];
   write('Entre com o separador da data: ');
   readln(SeparadorData);
   repeat
      SeparadorData:=SeparadorData+#0;
   until length(SeparadorData)=2;
   for i:=1 to 2 do novo[11+i]:=SeparadorData[i];
   write('Entre com o separador da hora: ');
   readln(SeparadorHora);
   repeat
      SeparadorHora:=SeparadorHora+#0;
   until length(SeparadorHora)=2;
   for i:=1 to 2 do novo[13+i]:=SeparadorHora[i];
   writeln;
   writeln('Defina o local do simbolo de moeda: ');
   writeln;
   writeln(' 0 - $500',SeparadorDecimal,'23');
   writeln(' 1 - 500',SeparadorDecimal,'23$');
   writeln(' 2 - $ 500',SeparadorDecimal,'23');
   writeln(' 3 - 500',SeparadorDecimal,'23 $');
   writeln(' 4 - 500$23');
   writeln;
   readln(LocalMoeda);
   aux:=chr(LocalMoeda);
   novo[16]:=aux[1];
   writeln;
   write('Quantas casas decimais tem a moeda? ');
   readln(NumeroDecimaisMoeda);
   aux:=chr(NumeroDecimaisMoeda);
   novo[17]:=aux[1];
   writeln;
   writeln('Qual o formato de hora? ');
   writeln;
   writeln(' 0 - 12 horas       1 - 24 horas');
   writeln;
   readln(FormatoDeHora);
   aux:=chr(FormatoDeHora);
   novo[18]:=aux[1];
   writeln;
   write('Entre com o caracter separador de lista: ');
   readln(SeparadorDeLista);
   repeat
      SeparadorDeLista:=SeparadorDeLista+#0;
   until length(SeparadorDeLista)=2;
   for i:=1 to 2 do novo[22+i]:=SeparadorDeLista[i];
   writeln;
   regs.flags:=0;
   regs.ah:=$38;
   regs.ds:=seg(novo);
   regs.bx:=1;
   regs.cx:=ofs(novo)+1;
   regs.dx:=$ffff;
   regs.al:=$ff;
   intr($21,regs);
end.